<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobapply.happymoments.activity.PicturesActivity">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.mobapply.happymoments.adapter.HeaderImageView
            android:id="@+id/header_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/empty_folder_button_360dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/album_title_background"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/tv_album_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/tv_album_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CC"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/moments_count"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:id="@+id/ll_is_playing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="6dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:src="@drawable/ic_play_circle_fill_white_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="@string/now_playing"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/selecting_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_selecting_image"
            android:src="@drawable/ic_check_white_48dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:visibility="gone"/>

    </FrameLayout>

    <GridView
        android:id="@+id/gridPictures"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_gravity="center"
        android:choiceMode="multipleChoice"
        android:clickable="true"
        android:horizontalSpacing="4dp"
        android:numColumns="3"
        android:paddingTop="4dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp" />


</RelativeLayout>

