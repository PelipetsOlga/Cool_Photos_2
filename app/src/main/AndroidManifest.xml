<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobapply.happymoments"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".HMApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.AlbumsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SelectAlbumsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_select_album"></activity>
        <activity
            android:name=".activity.PicturesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_pictures"></activity>
        <activity
            android:name=".activity.SelectPicturesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_select_pictures"></activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".activity.FullscreenPictureActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_picture"
            android:launchMode="singleInstance"
            android:theme="@style/AppThemeNoBar">

        </activity>

        <provider
            android:name=".provider.PictureProvider"
            android:authorities="com.mobapply.happymoments.providers.HappyMoments"
            android:exported="false"></provider>

        <service
            android:name=".service.PictureService"
            android:exported="false"></service>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="c9cbd0456fcb6fd13236ade58090a96cf32d0db7" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
