<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobapply.happymoments" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".HMApplication"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.AlbumsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SelectAlbumsActivity"
            android:label="@string/title_activity_select_album" >
        </activity>
        <activity
            android:name=".activity.PicturesActivity"
            android:label="@string/title_activity_pictures" >
        </activity>
        <activity
            android:name=".activity.SelectPicturesActivity"
            android:label="@string/title_activity_select_pictures" >
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activity.AddAlbumActivity"
            android:label="@string/title_activity_add_album" >
        </activity>
        <activity
            android:name=".activity.FullscreenPictureActivity"
            android:label="@string/title_activity_fullscreen_picture" >
        </activity>

        <provider android:name=".provider.PictureProvider"
            android:authorities="com.mobapply.happymoments.providers.HappyMoments"
            android:exported="false">
        </provider>
    </application>

</manifest>
