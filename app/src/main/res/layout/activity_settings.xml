<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:padding="8dp"
    android:useDefaultMargins="true"
    tools:context="com.mobapply.happymoments.activity.SettingsActivity">


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/tv_min"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_selected_menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/tv_content_updating"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@color/color_text_settings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:paddingTop="32dp"
        android:text="@string/tv_shuffle_images"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_text_settings" />

    <Switch
        android:id="@+id/switch_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

</GridLayout>
