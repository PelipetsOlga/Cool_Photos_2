<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greed_background"
    android:padding="4dp"
    tools:context="com.mobapply.happymoments.activity.PicturesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


         <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/header"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mobapply.happymoments.adapter.HeaderImageView
                android:id="@+id/header_picture"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src ="@drawable/empty_folder_button_360dp"/>

            <ImageView
                android:id="@+id/selecting_picture_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_selecting_image"
                android:src="@drawable/ic_check_white_48dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:visibility="gone"/>

        </FrameLayout>

        <GridView
            android:id="@+id/gridPictures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:layout_gravity="center"
            android:choiceMode="multipleChoice"
            android:clickable="true"
            android:horizontalSpacing="4dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="4dp" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_pictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_play_arrow_white_36dp"
        app:fabSize="normal"
        app:layout_anchor="@id/header"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>
