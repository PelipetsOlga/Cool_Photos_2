<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SHADOW LAYER -->
    <item android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="#66000000" />
            <size
                android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>
    <!-- CONTENT LAYER -->
    <item android:bottom="1dp" >
        <shape android:shape="oval">
            <solid android:color="@color/color_switch_white" />
            <size
                android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/color_switch_pink" />
            <size
                android:width="8dp"
                android:height="8dp"/>
        </shape>
    </item>
</layer-list>
